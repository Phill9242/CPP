NAME	=	span
CXX	=	c++
RM	=	rm -f
CPPFLAGS	= -g  -Wall -Wextra -Werror -std=c++98
# 
SRCS	=	main.cpp Span.cpp

OBJS	=	$(subst .cpp,.o,$(SRCS))

$(NAME):	$(OBJS)
	$(CXX) $(CPPFLAGS) -o $(NAME) $(OBJS) 

all:	$(NAME)

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re:	fclean $(NAME)
	